<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>New Course </h2>
      <%= form_for :course, local: true, url: {action: "create"} do |form| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <label>Subject:</label>
        <%= form.select(:subject, @subjects )%>
        <div class="form-row">
          <div class="col-md-6">
            <%= form.text_field :course_name, {:class => 'form-control', :placeholder => 'Name'} %>
          </div>
          <div class="col-md-6">
            <%= form.text_field :section, {:class => 'form-control', :placeholder => 'Section'} %>
          </div>
        </div>

        <%= hidden_field_tag :parent_course_id%>
        <%= form.submit 'Submit', :class => 'btn btn-main' %>
      <% end %>
    </div>
  </div>
</div>
