<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form method="post" action="addPastCourseToStudent">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= collection_select @student, :student_id, (Student.all), :id, :full_name %>
        <%= collection_select @course, :course_id, (Course.all), :id, :course_name %>
        <%= submit_tag("Submit") %>
      </form>
    </div>
  </div>
</div>
