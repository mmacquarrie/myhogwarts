<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Currently Offered Classes</h2>
      <table class="table sortable">
        <thead>
          <tr>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col" class="sorttable_nosort">Professor</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @classes.each do |course| %>
          <tr>
            <td><%= course.course.subject %>-<%= course.course.section %>-<%= course.section %></td>
            <td><%= course.course.course_name %></td>
            <td><%= course.professor.full_name %></td>
            <td><%= link_to hogwarts_class_path(course) do %><i class="fas fa-eye"></i><% end %></td>
            <td><%= link_to edit_hogwarts_class_path(course) do %><i class="fas fa-edit"></i><% end %></td>
            <td><%= link_to hogwarts_class_path(course), method: :delete, data:{confirm: "Delete this course?"} do %><i class="fas fa-trash"></i><% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to("Add New", new_hogwarts_class_path(), class: 'btn btn-main') %>
    </div>
  </div>
</div>
