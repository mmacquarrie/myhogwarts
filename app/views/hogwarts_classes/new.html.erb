<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>New Class </h2>
      <%= form_for :hogwarts_class, local: true, url: {action: "create"} do |form| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-row">
          <div class="col-md-6">
            <%= form.select(:term, @terms )%>
            <%= form.text_field :section, {:class => 'form-control', :placeholder => 'Section'} %>
            <%= collection_select @course, :course_id, (Course.all), :id, :course_name, {:include_blank => 'Select Course'} %>
            <%= collection_select @professor, :professor_id, (Professor.all), :id, :full_name, {:include_blank => 'Select Professor'} %>
          </div>
          <div class="col-md-6">


          </div>
        <%= form.submit 'Submit', :class => 'btn btn-main' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
