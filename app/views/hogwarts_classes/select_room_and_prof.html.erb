<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>New Class </h2>
      <form method="POST" action="findRoomAndProf">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <!-- add course details as hidden fields -->
        <div class="form-row">
          <div class="col-md-12">
          <%= collection_select @professor, :professor_id, (Professor.all), :id, :full_name, {:include_blank => 'Select Professor'} %>
          </div>
        </div>
        <%= form.submit 'Submit', :class => 'btn btn-main' %>
      </form>

      <% end %>
    </div>
  </div>
</div>
