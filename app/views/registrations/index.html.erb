<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Registration</h2>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <h3>Select a student</h3>
        <div class="row">
        <% @students.in_groups_of(4, false) do |group| %>
        <div class="col-md-4">
          <% for student in group %>
            <%=link_to(registration_path(student), class: "nav-link") do %>
              <%= student.full_name %>
            <% end %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
